<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context=".Control_GastosFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginVertical="60dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_ccip__1___1_" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Control de Gastos"
        android:textAlignment="center"
        android:textColor="@color/azulccip"
        android:fontFamily="@font/qanelabolt"
        android:paddingBottom="45dp"
        android:textSize="31dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnCuadrilla_cicsa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/azulccip"
                android:paddingVertical="17.5dp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="@font/qanelalight"
                android:text="Cuadrilla Cicsa" />

            <Button
                android:id="@+id/btnAlquilerGPE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/azulccip"
                android:fontFamily="@font/qanelalight"
                android:paddingVertical="17.5dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Alquiler GEP" />

            <Button
                android:id="@+id/btnMPA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/azulccip"
                android:fontFamily="@font/qanelalight"
                android:paddingVertical="17.5dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="MPA" />

            <Button
                android:id="@+id/btnSEAL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/azulccip"
                android:fontFamily="@font/qanelalight"
                android:paddingVertical="17.5dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Seal" />

            <Button
                android:id="@+id/btnCLARO_PINT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/azulccip"
                android:fontFamily="@font/qanelalight"
                android:paddingVertical="17.5dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Claro Pint" />

            <Button
                android:id="@+id/btnCONTRATARCLARO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/azulccip"
                android:fontFamily="@font/qanelalight"
                android:paddingVertical="17.5dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Contratar Claro" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context=".OperacionesFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginVertical="60dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_ccip__1___1_" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Operacion"
        android:textAlignment="center"
        android:textColor="@color/azulccip"
        android:fontFamily="@font/qanelabolt"
        android:paddingBottom="45dp"
        android:textSize="31dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btncontrol_de_gastos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/azulccip"
                android:paddingVertical="17.5dp"
                android:onClick="Control_de_Gastos"
                android:background="@color/transparente"
                android:fontFamily="@font/qanelalight"
                android:text="Control de Gastos" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>